---
import Social from '@components/ui/Social.astro';
---

<section
	data-testid="hero"
	class="mb-10 mt-32 flex h-2/3 flex-col items-center justify-center gap-5 text-center"
>
	<div data-testid="hero-img" class="flex w-1/3 items-center justify-center">
		<img
			src="/src/assets/images/icon-mich0w0h.png"
			alt="profile image"
			width={180}
			height={180}
			loading="eager"
			class={'border-2 rounded-full border-orange border-opacity-80'}
		/>
	</div>
	<div class="flex flex-col items-center text-center">
		<div>
			<h1 class="font-monospace text-2xl font-bold text-black lg:text-3xl">
				Hi there! I'm <span class="text-orange">mich0w0h</span>
			</h1>
			<p class="mt-2 text-black">a corporate engineer / hobby game developer based in Japan</p>
		</div>
		<div class="mt-2 flex scale-50 gap-5 text-black">
			<Social />
		</div>
	</div>
</section>
