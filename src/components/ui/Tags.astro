---
export interface Props {
	tags?: string[];
}

const { tags } = Astro.props;
---

{
	tags && (
		<div class="mt-2 flex w-2/3 flex-row gap-1 lg:gap-3">
			{tags.map((tag) => (
				<span class="bg-orange inline-block rounded bg-opacity-30 px-1.5 text-xs text-black lg:py-1  lg:text-sm">
					#{tag}
				</span>
			))}
		</div>
	)
}
